{
  "info": {
    "name": "Mobiauto Backend API",
    "_postman_id": "c4c9b4a1-0000-4667-9999-123456789abc",
    "description": "Collection para testar as APIs do Mobiauto Backend com autenticação JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/register-admin", "host": ["{{baseUrl}}"], "path": ["api","auth","register-admin"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mobiauto.com\",\n  \"senha\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mobiauto.com\",\n  \"senha\": \"123456\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", res.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Criar Usuario",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/usuarios", "host": ["{{baseUrl}}"], "path": ["api","usuarios"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Renan\",\n  \"email\": \"renan@mobiauto.com\",\n  \"senha\": \"123456\",\n  \"cargo\": \"GERENTE\"\n}"
            }
          }
        },
        {
          "name": "Listar Usuarios",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/usuarios", "host": ["{{baseUrl}}"], "path": ["api","usuarios"] }
          }
        }
      ]
    },
    {
      "name": "Lojas",
      "item": [
        {
          "name": "Criar Loja",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/lojas", "host": ["{{baseUrl}}"], "path": ["api","lojas"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Loja Central\"\n}"
            }
          }
        },
        {
          "name": "Listar Lojas",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/lojas", "host": ["{{baseUrl}}"], "path": ["api","lojas"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" }
  ]
}
